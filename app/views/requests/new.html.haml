= bootstrap_form_for @request do |f|
  = render 'shared/error_messages'
  = f.number_field :people, :min => 0, :label => "Number of Attendees", :required => true
  = f.email_field :email, :placeholder => "youremail@example.com", :required => true
  = f.text_field :department, :placeholder => "Civil Engineering", :required => true
  = label_tag :date,'Date'
  = text_field_tag :date ,nil,:required => true
  = label_tag :time,'Start Time'
  = time_select :time,""
  = label_tag :finish_time,'End Time'
  = time_select :finish_time,""
  = f.select :place, Calendar.all.collect { |cal| [cal.name, cal.id] }, :include_blank => true
  / = f.text_field :place, :placeholder => "615 Davis Hall", :required => true
  = f.text_area :reason, :rows => 5, :required => true
  = f.text_area :details, :rows => 5, :required => true
  = f.check_box :course_related, {}, true, params[:new]
  = f.check_box :accept_different_room, {}, true, params[:new]
  = submit_tag "Submit Request",:class =>"btn btn-inverse btn-success",:data => {:confirm => "Ready to submit?"}

