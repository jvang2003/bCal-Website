%h1 
  = params[:new] ? "Create a new calendar" : "Edit " + @calendar.name
/ %form{ :action => params[:new] ? "create" : "../update/#{params[:id]}", :method => "post"}
= form_tag((params[:new] ? "create" : "../update/#{params[:id]}"), :method => (params[:new] ? "post" : "put")) do
  %fieldset
    %ol
      %li
        %label{:for => "name"} Name:
        %input{:type => "text", :name => "name", :class => "text", :value => params[:new] ? "" : @calendar.name}
      %li
        %label{:for => "key"} API key:
        %input{:type => "text", :name => "key", :class => "text", :value => params[:new] ? "" : @calendar.key}
      %li
        %label{:for => "visib"} Visibility:
        %select{:name => "visib"}
          %option{:value => "Public", :selected => params[:new] ? false : @calendar.visib == 'Public'} Public
          %option{:value => "Private", :selected => params[:new] ? false : @calendar.visib == 'Private'} Private
          / %option{:value => "Public"} Public
          / %option{:value => "Private"} Private
      %li
        %label{:for => "fee_required"} Fee required?
        = check_box_tag "fee_required", true, params[:new] ? false : @calendar.fee_required
        / %input{:type => "checkbox", :name => "fee_required", :class => "checkbox", :check => "do "}

    %input{:type => "submit", :value => "Send", :class => "button"}

/ %a{:href => 'calendar/destroy', :class => 'btn btn-danger'} Destroy this calendar
= link_to 'Destroy this calendar', '/', :confirm => "Are you sure you want to destroy this calendar?", :class => "btn btn-danger"
