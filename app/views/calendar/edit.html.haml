%h1 
  = "Edit " + @calendar.name
/ %form{ :action => params[:new] ? "create" : "../update/#{params[:id]}", :method => "post"}
= form_tag(update_cal_path(@calendar.id), :method => 'put') do
  = render :partial => 'calendar_form', :locals => {:cal => @calendar} 
  = submit_tag 'Update Calendar', :class => 'button'

= link_to 'Destroy this calendar', @calendar.id.to_s, :method => :delete, :confirm => "Are you sure you want to destroy this calendar?", :class => "btn btn-danger"
