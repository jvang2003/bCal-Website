!!! 5
%html(lang="en")
  %head
    %script{:type => 'text/javascript', :src => 'http://codeorigin.jquery.com/jquery-1.10.2.min.js'}
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "BCalIntegration"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"
    = stylesheet_link_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/black-tie/jquery-ui.min.css"



  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href=calendars_path) B-Cal Integration
          .container.nav-collapse
            %ul.nav.navbar-nav
              -[CalendarController,RequestController,UserController].each do |controller|
                - name = controller.controller_name.classify.downcase
                - if controller.can_crud? current_user
                  .btn-group
                    %button.btn= link_to name.titlecase.pluralize, url_for(:controller => name, :action => :index)
                    - if controller.can_crud? current_user
                      %button.btn.dropdown-toggle{"data-toggle" => :dropdown}
                        %span.caret
                      %ul.dropdown-menu{:role => :menu}
                        %li=link_to "Create " + name.titlecase, url_for(:controller =>name, :action => :new)
                - elsif controller.can_view? current_user
                  %button.btn= link_to name.titlecase.pluralize, url_for(:controller => name, :action => :index)

              / - if current_user.role >= User.VALID_ROLES["Dept Admin"]
              /   %li= link_to "Users", users_path
              / %li= link_to "Calendars", calendars_path
              / %li= link_to "Requests", request_index_path
            %ul.nav.navbar-nav.navbar-right
              %li= link_to "About", "/about"
              %li.dropdown{:id => "fat-menu"}
                %a.dropdown-toggle{:href => "#", "data-toggle" => "dropdown"}
                  Account
                  %b.caret
                  %ul.dropdown-menu
                    -if signed_in?
                      %li= link_to "Profile", current_user
                      %li= link_to "Settings", edit_user_path(current_user)
                      %li.divider
                      %li
                        = link_to "Sign out", sign_out_path, method: "delete"
                    -else
                      %li= link_to "Sign In", sign_in_path
                      %li= link_to "Sign Up", sign_up_path

    .container-fluid

      .row-fluid
        .span12
          = bootstrap_flash
          = yield
