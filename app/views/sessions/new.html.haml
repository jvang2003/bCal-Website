-provide :title, "Sign in"
%h1
  = "Sign In"

.row
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|

      = f.label :calnet_id
      = f.text_field :calnet_id

      %input{:type=>"hidden", :name => "return_to", :value => params[:return_to]}

      = f.submit "Sign in", class: "btn btn-large btn-primary", id: "submit_button"

    %p New user?
    = link_to "Sign up now!", sign_up_path
