= bootstrap_form_for @user do |f|
  = f.error_messages
  = f.text_field :name
  = f.hidden_field :calnet_id
  = f.email_field :email
  - if valid_create_roles_for(current_user).length > 1
    = f.select :role, options_for_select(valid_create_roles_for(current_user), @selected)
  - else
    = f.hidden_field :role, :value => 0
  = f.submit